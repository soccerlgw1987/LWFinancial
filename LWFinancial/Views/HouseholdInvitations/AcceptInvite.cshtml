@model LWFinancial.Models.HouseholdInvitation
@using LWFinancial.Helpers
@using LWFinancial.Enumerations
@using Microsoft.AspNet.Identity

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Join Household</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Households")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Dashboard</span></li>
                <li><span>Household</span></li>
                <li><span>Join</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    @{
        var household = Model.Household;
    }

    <!-- start: page -->
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <section class="panel">
                <header class="panel-heading bg-primary">
                    <div class="panel-heading-icon">
                        <img src="@household.AvatarPath" class="img-responsive" data-lock-picture="~/img/!logged-user.jpg" />
                    </div>
                </header>
                <div class="panel-body text-center">
                    <h3 class="text-semibold mt-sm text-center">@household.Name</h3>
                    <p class="text-center">@household.Decscription</p>
                </div>
                <div class="quote-footer">
                    <span class="datetime">Created: @household.Created.ToString("MMMM dd, yyyy")</span>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm("Accept", "Households", FormMethod.Post, new { @class = "form-horizontal mb-lg" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Household.Id)
            @Html.HiddenFor(model => model.Household.Name)
            @Html.HiddenFor(model => model.Household.Decscription)
            @Html.HiddenFor(model => model.Household.AvatarPath)
            @Html.HiddenFor(model => model.Household.IncomeAmount)
            @Html.HiddenFor(model => model.Household.Created)
            @Html.HiddenFor(model => model.Household.Updated)

            <div class="col-md-offset-3 col-md-2">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        }
    </div>

    <!-- end: page -->

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}